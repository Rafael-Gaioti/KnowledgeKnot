<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="text-center">
            <h1>Criar Post</h1>
        </div>
        <div class="col-6 offset-3">
            <form action="/posts" method="POST" novalidate class="validate-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="post[title]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="post[description]" rows="4"
                        cols="40" required></textarea>
                </div>

                <button class="btn btn-success">Post</button>
            </form>
        </div>
    </div>

