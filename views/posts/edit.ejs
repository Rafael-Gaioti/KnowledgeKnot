<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="text-center"><h1>Editar Post</h1></div>
    <div class="col-6 offset-3">
        <form action="/posts/<%= post.id %>?_method=PUT" method="POST" novalidate class="validate-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="post[title]"  value="<%= post.title %>" required="true">
            </div>
            <div class="mb-3">
                <label class="form-label" for="body">Body</label>
                <textarea class="form-control" type="text" id="body" name="post[body]" rows="4" cols="40" required="true"><%= post.body %></textarea>
            </div>

            <button class="btn btn-success">Editar</button>
        </form>

    </div>
</div>
