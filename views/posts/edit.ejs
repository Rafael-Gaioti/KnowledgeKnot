<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="text-center"><h1>Editar Post</h1></div>
    <div class="col-6 offset-3">
        <form action="/posts/<%= post.id %>?_method=PUT" method="POST" novalidate class="validate-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="post[title]"  value="<%= post.title %>" required="true">
            </div>
            <div class="mb-3">
                <label class="form-label" for="body">Body</label>
                <textarea class="form-control" type="text" id="body" name="post[body]" rows="4" cols="40" required="true"><%= post.body %></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
            </div>
            <div class="mb-3">
                <% post.images.forEach(function (img, i) { %>
                    <div class="position-relative d-inline-block">
                        <img src="<%= img.thumbnail%>" class="img-thumbnail" alt="Imagem <%= i + 1 %>">
                        <div class="position-absolute top-0 end-0 mt-3 me-3">
                            <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>"
                            class="form-check-input">
                        </div>
                    </div>
                <%  }) %>
            </div>
            
            <button class="btn btn-success">Editar</button>
        </form>

    </div>
</div>
