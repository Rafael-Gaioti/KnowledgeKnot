<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="text-center"><h1>Editar Post</h1></div>
    <div class="col-6 offset-3">
        <form action="/posts/<%= post.id %>?_method=PUT"" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="post[title]"  value="<%= post.title %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="post[description]" rows="4" cols="40"><%= post.description %></textarea>
            </div>

            <button class="btn btn-success">Editar</button>
        </form>

    </div>
</div>
